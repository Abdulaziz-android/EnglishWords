<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">


        <TextView
            android:id="@+id/number_tv"
            android:paddingRight="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/word_tv"
            app:layout_constraintStart_toEndOf="@id/number_tv"
            app:layout_constraintBottom_toBottomOf="@id/number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple"
            android:textColor="@color/app_color_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/definition_tv"
            app:layout_constraintStart_toEndOf="@id/number_tv"
            app:layout_constraintTop_toBottomOf="@id/word_tv"
            android:layout_width="0dp"
            android:paddingTop="4dp"
            android:layout_height="wrap_content"
            android:text="definition: ksdmasd asd"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="start"
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/example_tv"
            app:layout_constraintStart_toEndOf="@id/number_tv"
            app:layout_constraintTop_toBottomOf="@id/definition_tv"
            android:layout_width="0dp"
            android:paddingVertical="4dp"
            android:layout_height="wrap_content"
            android:text="example: asda masd smdf"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="start"
            android:textSize="20sp" />






    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>